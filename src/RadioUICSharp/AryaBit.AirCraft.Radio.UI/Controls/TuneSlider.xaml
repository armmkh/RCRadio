<UserControl x:Class="AryaBit.AirCraft.Radio.UI.Controls.TuneSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AryaBit.AirCraft.Radio.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Slider x:Name="sld" HorizontalAlignment="Stretch" Margin="0,0,30,0" VerticalAlignment="Top" Maximum="180" Value="145" AutoToolTipPlacement="BottomRight" ValueChanged="sld_ValueChanged" />
        <Button x:Name="btnTune" Content="..." HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" Width="22" Click="btnTune_Click"/>

    </Grid>
</UserControl>
