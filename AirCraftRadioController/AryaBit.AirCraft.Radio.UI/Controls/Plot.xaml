             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AryaBit.AirCraft.Radio.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Canvas x:Name="canvPlot" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" >
            <Ellipse x:Name="circlePoint"  Canvas.Left="50" Canvas.Top="50"   Stroke="Black" StrokeThickness="1" Fill="Red"  Height="3"
