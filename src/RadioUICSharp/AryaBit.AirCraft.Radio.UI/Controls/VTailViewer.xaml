<UserControl x:Class="AryaBit.AirCraft.Radio.UI.Controls.VTailViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AryaBit.AirCraft.Radio.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="120">
    <Grid>
        <Canvas HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" >
            <Line x:Name="thingLeft" X1="40" Y1="0" X2="40" Y2="120" Stroke="Black" StrokeThickness="4" />
            <Line x:Name="thingRight"  X1="80" Y1="0" X2="80" Y2="120" Stroke="Black" StrokeThickness="4" />
        </Canvas>
    </Grid>
</UserControl>
